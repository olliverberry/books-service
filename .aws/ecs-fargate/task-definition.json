{
  "family": "books-service-family",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "books-service",
      "image": "ghcr.io/stuartcmehrens/books-service:${TAG}",
      "portMappings": [
        {
          "containerPort": ${PORT},
          "hostPort": ${PORT},
          "protocol": "tcp"
        }
      ],
      "essential": true
    },
    {
      "name": "datadog-agent",
      "image": "public.ecr.aws/datadog/agent:latest",
      "essential": true,
      "environment": [
        {
          "name": "DD_API_KEY",
          "value": "${DD_API_KEY}"
        },
        {
          "name": "ECS_FARGATE",
          "value": "true"
        }
      ]
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "2048",
  "memory": "4096"
}